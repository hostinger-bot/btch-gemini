{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/cjs/types",
    "strict": true,
    "outDir": "./dist/cjs",
    "rootDir": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
